<!DOCTYPE html>
<html>
<head>
    {%set fulltitle = 'Game'%}
    {% include 'part/head.twig' %}
</head>
<body class="game">
    <div class="inner2">
        <div class="menu">
            <div class="menuh">
                <h2>{{user.username}}</h2>
                <img src="{{asset('img/items/city1.png')}}" alt="" class="cityimage">
                <p class="textp" id="city-name">Loading...</p>
                <div class="resources">
                    <img src="{{asset('img/items/res_food.png')}}" alt="" class="res-img"> <span id="res-food">-</span>
                    <img src="{{asset('img/items/res_wood.png')}}" alt="" class="res-img"> <span id="res-wood">-</span>
                    <br>
                    <img src="{{asset('img/items/res_gold.png')}}" alt="" class="res-img"> <span id="res-gold">-</span>
                    <img src="{{asset('img/items/res_workers.png')}}" alt="" class="res-img"> <span id="res-stone">-</span>
                </div>
            </div>
        </div>
        <div class="game" id="game">
            <div class="arrow" id="left-arrow">&lt;</div>
            <div class="arrow" id="right-arrow">&gt;</div>
            <div class="arrow" id="top-arrow">∧</div>
            <div class="arrow" id="down-arrow">∨</div>
            <div id="elements">

            </div>
        </div>
        <div class="menu">
            <div class="menuh" id="right-data">
                <p class="none-show">- Select a city -</p>
                <div id="selected-city-show">

                </div>
            </div>
        </div>
    </div>
    {% include 'part/footer.twig' %}
    {% include 'part/scripts.twig' %}
</body>
</html>
